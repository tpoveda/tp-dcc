MenuTabBlockButton
{
    border-radius: 0;
    padding: 2px 10px;
    border:none;
}

MenuTabBlockButton:hover
{
    color: @accent_color;
    background-color:@background_in_color;
}

MenuTabBlockButton:checked
{
    color: @accent_color;
    background-color:@background_in_color;
}
